<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedRoad"
    android:background="#099F91"
    android:orientation="vertical">

    <Button
        android:id="@+id/mirpurToUttara"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:text="Mirpur To Uttara"
        android:onClick="mirpurToUttara"/>
    <Button
        android:id="@+id/mirpurToBosundhara"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:text="Mirpur To Bosundhara"
        android:onClick="mirpurToBosundhara"/>
    <Button
        android:id="@+id/mirpurToRampura"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:text="Mirpur To Rampura"
        android:onClick="mirpurToRampura"/>


</LinearLayout>